# OpenAI API Key (optional - for API-based embeddings)
OPENAI_API_KEY=sk-your-api-key-here

# CORS - comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Server configuration
PORT=8001
ENVIRONMENT=development

# Default chunking settings
DEFAULT_CHUNK_SIZE=450
DEFAULT_CHUNK_OVERLAP=90
DEFAULT_CHUNK_STRATEGY=recursive

# Default embedding model
DEFAULT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Canvas LMS API (for canvas_scraper.py)
CANVAS_API_URL=https://canvas.youruniversity.edu/api/v1
CANVAS_API_TOKEN=your-canvas-api-token-here
